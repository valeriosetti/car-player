{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build",
			"command": "./build.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
        {
			"type": "shell",
			"label": "Re-build",
			"command": "./rebuild.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
			"group": {
				"kind": "build",
				"isDefault": false
			},
		}
	]
}
